<Window x:Class="Exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Game" Height="450" Width="800" WindowStyle="ToolWindow">
    <Grid>
        <Border MinWidth="100" MaxWidth="250" Margin="15,41,15,0" Padding="5" VerticalAlignment="Top" Background="White" CornerRadius="15" RenderTransformOrigin="0.494,-0.716">

            <StackPanel>
                <TextBlock Text="Выберете время: " FontSize="20" FontWeight="Bold" FontFamily="Comic Sans MS" Width="164" Foreground="#FF7730CE"/>
            </StackPanel>

        </Border>
        <RadioButton Content="10 sec" HorizontalAlignment="Center" Margin="0,139,0,0" VerticalAlignment="Top" Height="30" Width="164" FontSize="15" FontWeight="Bold" IsChecked="False" Checked="RadioButton_Checked"/>
        <RadioButton Content="30 sec" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Height="30" Width="165" FontSize="15" FontWeight="Bold" IsChecked="True" Checked="RadioButton_Checked_1"/>
        <RadioButton Content="60 sec" HorizontalAlignment="Center" Margin="0,204,0,0" VerticalAlignment="Top" Height="30" Width="165" FontSize="15" FontWeight="Bold" Checked="RadioButton_Checked_2" RenderTransformOrigin="0.879,0.335"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.698,0.002" Background="#FF7730CE" FontWeight="Bold" FontSize="20" FontFamily="Cascadia Code" Foreground="White" Width="110" Height="40" SnapsToDevicePixels="True" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
